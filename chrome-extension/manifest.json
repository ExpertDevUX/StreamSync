{
  "manifest_version": 3,
  "name": "ConnectNow - Video Meetings",
  "version": "3.1.0",
  "description": "Quick access to ConnectNow video meetings with chat, screen sharing, and password-protected rooms",
  "permissions": ["activeTab", "storage", "tabs", "notifications"],
  "options_page": "options.html",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "ConnectNow"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "host_permissions": ["*://*/*"]
}

{
  "manifest_version": 3,
  "name": "StreamSync Helper",
  "version": "2.0",
  "description": "Enhances StreamSync video meetings with advanced features and quick access",
  "permissions": ["activeTab", "storage", "tabs"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://*.vercel.app/*", "*://*.vercel.dev/*", "http://localhost:*/*", "https://localhost:*/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
